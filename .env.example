# Production Environment Variables
# Copy this file to .env.production and fill in your values

# Database Connection - Neon 
DATABASE_URL="postgresql://username:password@host:5432/database_name"

# Session Secret (Generate a random string)
SESSION_SECRET="change-this-to-a-random-secret-key-min-32-chars"

# Application Settings
NODE_ENV=production
PORT=5001

# Stacks Blockchain Configuration
STACKS_API_URL="https://api.mainnet.hiro.so"
STACKS_NETWORK="mainnet"
CONTRACT_ADDRESS="your-deployed-contract-address"
CONTRACT_NAME="freelance-logic"
DATA_CONTRACT_ADDRESS="your-data-contract-address"
DATA_CONTRACT_NAME="freelance-data"
SECURITY_CONTRACT_ADDRESS="your-security-contract-address"
SECURITY_CONTRACT_NAME="freelance-security"

# Multi-Sig Wallet Configuration
MULTISIG_THRESHOLD="3"
MULTISIG_SIGNERS="address1,address2,address3,address4,address5"
MULTISIG_TIMELOCK="86400" # 24 hours in seconds

# DAO Wallet Configuration
DAO_WALLET_ADDRESS="your-dao-wallet-address"
PLATFORM_FEE_RATE="10" # 10%

# X (Twitter) Integration
X_API_KEY="your-x-api-key"
X_API_SECRET="your-x-api-secret"
X_ACCESS_TOKEN="your-x-access-token"
X_ACCESS_TOKEN_SECRET="your-x-access-token-secret"
X_BEARER_TOKEN="your-x-bearer-token"

# NFT Configuration
NFT_CONTRACT_ADDRESS="your-nft-contract-address"
NFT_CONTRACT_NAME="achievement-nfts"
IPFS_GATEWAY_URL="https://ipfs.io/ipfs/"

# Chat System Configuration
CHAT_ENCRYPTION_KEY="your-32-character-encryption-key"
REDIS_URL="redis://username:password@host:port"
WEBSOCKET_PORT="5002"

# Security Configuration
JWT_SECRET="your-jwt-secret-key-min-32-chars"
MFA_SECRET_KEY="your-mfa-secret-key"
ADMIN_WHITELIST_IPS="ip1,ip2,ip3"

# Monitoring & Analytics
SENTRY_DSN="your-sentry-dsn-for-error-tracking"
LOG_LEVEL="info"
METRICS_ENDPOINT="your-metrics-collection-endpoint"

# KYC/AML Configuration
KYC_PROVIDER_API_KEY="your-kyc-provider-api-key"
KYC_WEBHOOK_SECRET="your-kyc-webhook-secret"

# File Storage
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="your-s3-bucket-name"

# Rate Limiting
RATE_LIMIT_WINDOW_MS="900000" # 15 minutes
RATE_LIMIT_MAX_REQUESTS="100"

# Cache Configuration
CACHE_TTL="3600" # 1 hour in seconds
REDIS_CACHE_URL="redis://username:password@host:port"

# Email Configuration (for notifications)
SMTP_HOST="your-smtp-host"
SMTP_PORT="587"
SMTP_USER="your-smtp-username"
SMTP_PASS="your-smtp-password"
EMAIL_FROM="noreply@yourdomain.com"

# Backup Configuration
BACKUP_SCHEDULE="0 2 * * *" # Daily at 2 AM
BACKUP_RETENTION_DAYS="30"
BACKUP_ENCRYPTION_KEY="your-backup-encryption-key"
